<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/colorSurface"
    tools:context=".ExtrateacherFeatures.examTimeTableCreation">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.Material3.Dark.ActionBar"
        app:elevation="8dp"
        android:stateListAnimator="@animator/appbar_elevation">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Exam Timetable Creator"
            app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:navigationIconTint="@android:color/white"
            app:menu="@menu/toolbar_menu"
            app:contentInsetStart="16dp"
            app:background="?attr/colorPrimarySurface" />
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/header_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                android:layout_marginBottom="@dimen/spacing_large"
                android:transitionName="header_card_transition">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exam Schedule Manager"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan and organize exams efficiently"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="@dimen/spacing_small" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/form_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_card"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                android:layout_marginBottom="@dimen/spacing_large"
                android:animateLayoutChanges="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/subjectInputLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxStrokeColor="@color/selector_input_stroke"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        app:startIconDrawable="@drawable/ic_subject"
                        app:endIconMode="dropdown_menu">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/subjectInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Subject *"
                            android:inputType="text"
                            android:maxLines="1"
                            style="@style/TextAppearance.Material3.BodyLarge" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_medium">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/marksInputLayout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeColor="@color/selector_input_stroke"
                            app:hintTextColor="?attr/colorOnSurfaceVariant"
                            app:startIconDrawable="@drawable/ic_score"
                            android:layout_marginEnd="@dimen/spacing_small">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/marksInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Marks *"
                                android:inputType="number"
                                android:maxLength="3"
                                style="@style/TextAppearance.Material3.BodyLarge" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/durationInputLayout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeColor="@color/selector_input_stroke"
                            app:hintTextColor="?attr/colorOnSurfaceVariant"
                            app:startIconDrawable="@drawable/ic_timer"
                            android:layout_marginStart="@dimen/spacing_small">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/durationInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Duration (min)"
                                android:inputType="number"
                                android:maxLength="3"
                                style="@style/TextAppearance.Material3.BodyLarge" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/examTypeInputLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        app:boxStrokeColor="@color/selector_input_stroke"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        app:startIconDrawable="@drawable/ic_exam">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/examTypeInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Exam Type"
                            android:inputType="text"
                            style="@style/TextAppearance.Material3.BodyLarge" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/selectedDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        style="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurface" />
                    <CalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        app:layout_constraintTop_toBottomOf="@id/selectedDateText"
                        android:background="@drawable/shape_rounded_rect" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/selectedTimeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            style="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="?attr/colorOnSurface" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/timePickerButton"
                            style="@style/Widget.Material3.Button.ElevatedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick Time"
                            app:icon="@drawable/ic_clock"
                            app:cornerRadius="12dp"
                            app:rippleColor="@color/selector_ripple" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_medium">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/roomInputLayout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeColor="@color/selector_input_stroke"
                            app:hintTextColor="?attr/colorOnSurfaceVariant"
                            app:startIconDrawable="@drawable/ic_room"
                            android:layout_marginEnd="@dimen/spacing_small">
                            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                android:id="@+id/roomInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Room"
                                android:inputType="text"
                                style="@style/TextAppearance.Material3.BodyLarge" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/capacityInputLayout"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:boxStrokeColor="@color/selector_input_stroke"
                            app:hintTextColor="?attr/colorOnSurfaceVariant"
                            app:startIconDrawable="@drawable/ic_capacity"
                            android:layout_marginStart="@dimen/spacing_small">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/capacityInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Capacity"
                                android:inputType="number"
                                android:maxLength="3"
                                style="@style/TextAppearance.Material3.BodyLarge" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/invigilatorInputLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        app:boxStrokeColor="@color/selector_input_stroke"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        app:startIconDrawable="@drawable/ic_person"
                        app:endIconMode="dropdown_menu">
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/invigilatorInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Invigilator"
                            android:inputType="textPersonName"
                            style="@style/TextAppearance.Material3.BodyLarge" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/selectedInvigilatorsChipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        app:chipSpacing="8dp"
                        app:chipStyle="@style/Widget.Material3.Chip.Suggestion"
                        app:singleLine="false" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/instructionsInputLayout"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        app:boxStrokeColor="@color/selector_input_stroke"
                        app:hintTextColor="?attr/colorOnSurfaceVariant"
                        app:startIconDrawable="@drawable/ic_info">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/instructionsInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Instructions"
                            android:inputType="textMultiLine"
                            android:minLines="2"
                            android:maxLines="4"
                            style="@style/TextAppearance.Material3.BodyLarge" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/submitButton"
                        style="@style/Widget.Material3.Button.ElevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        android:text="Add to Schedule"
                        app:icon="@drawable/ic_add"
                        app:cornerRadius="12dp"
                        app:rippleColor="@color/selector_ripple"
                        android:transitionName="submit_transition" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/preview_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/form_card"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                android:layout_marginBottom="@dimen/spacing_large"
                android:animateLayoutChanges="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule Preview"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface" />
                    <android.widget.HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:scrollbars="horizontal"
                        android:background="@drawable/shape_rounded_rect">
                        <TableLayout
                            android:id="@+id/examTable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:stretchColumns="*"
                            android:divider="?attr/colorOutline"
                            android:showDividers="middle">
                            <TableRow
                                android:background="?attr/colorSurfaceVariant"
                                android:padding="@dimen/spacing_small">
                                <TextView
                                    android:text="Subject"
                                    style="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="?attr/colorOnSurface"
                                    android:padding="@dimen/spacing_small" />
                                <TextView
                                    android:text="Date"
                                    style="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="?attr/colorOnSurface"
                                    android:padding="@dimen/spacing_small" />
                                <TextView
                                    android:text="Time"
                                    style="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="?attr/colorOnSurface"
                                    android:padding="@dimen/spacing_small" />
                                <TextView
                                    android:text="Duration"
                                    style="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="?attr/colorOnSurface"
                                    android:padding="@dimen/spacing_small" />
                                <TextView
                                    android:text="Room"
                                    style="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="?attr/colorOnSurface"
                                    android:padding="@dimen/spacing_small" />
                                <TextView
                                    android:text="Invigilator"
                                    style="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="?attr/colorOnSurface"
                                    android:padding="@dimen/spacing_small" />
                                <TextView
                                    android:text="Action"
                                    style="@style/TextAppearance.Material3.LabelLarge"
                                    android:textColor="?attr/colorOnSurface"
                                    android:padding="@dimen/spacing_small" />
                            </TableRow>
                        </TableLayout>
                    </android.widget.HorizontalScrollView>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/export_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/preview_card"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                android:layout_marginBottom="@dimen/spacing_large">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Export Options"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_small">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/getImageButton"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Export Image"
                            app:icon="@drawable/ic_image"
                            app:cornerRadius="12dp"
                            app:rippleColor="@color/selector_ripple"
                            android:layout_marginEnd="@dimen/spacing_small"
                            android:transitionName="export_image_transition" />
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/exportTextButton"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Export Text"
                            app:icon="@drawable/ic_text"
                            app:cornerRadius="12dp"
                            app:rippleColor="@color/selector_ripple"
                            android:layout_marginStart="@dimen/spacing_small"
                            android:transitionName="export_text_transition" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/shareButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="Share Schedule"
                        app:icon="@drawable/ic_share"
                        app:cornerRadius="12dp"
                        app:rippleColor="@color/selector_ripple"
                        android:transitionName="share_transition" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/export_card"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="?attr/colorSurface"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_medium">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Tips"
                        style="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_small"
                        android:text="@string/exam_tips"
                        style="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/spacing_medium"
        app:srcCompat="@drawable/ic_help"
        app:backgroundTint="?attr/colorPrimary"
        app:rippleColor="@color/selector_ripple"
        app:elevation="6dp"
        app:hoveredFocusedTranslationZ="12dp" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>