<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".videoplayers1.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Playlist"
        android:textSize="28sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/product_sans_medium"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/product_sans_medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Semester 1 Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sem1_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SpringBoot"
                    android:textSize="16sp"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/product_sans_medium"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_chatbot"
                    app:iconGravity="start"
                    app:iconTint="#FFFFFF"
                    app:backgroundTint="#000000"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Semester 2 Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sem2_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apache kafka"
                    android:textSize="16sp"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/product_sans_medium"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_chatbot"
                    app:iconGravity="start"
                    app:iconTint="#FFFFFF"
                    app:backgroundTint="#000000"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Semester 3 Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sem3_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Web Development"
                    android:textSize="16sp"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/product_sans_medium"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_chatbot"
                    app:iconGravity="start"
                    app:iconTint="#FFFFFF"
                    app:backgroundTint="#000000"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Semester 4 Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sem4_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Game Development"
                    android:textSize="16sp"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/product_sans_medium"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_chatbot"
                    app:iconGravity="start"
                    app:iconTint="#FFFFFF"
                    app:backgroundTint="#000000"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Semester 5 Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sem5_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Database"
                    android:textSize="16sp"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/product_sans_medium"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_chatbot"
                    app:iconGravity="start"
                    app:iconTint="#FFFFFF"
                    app:backgroundTint="#000000"
                    android:elevation="4dp"
                    android:layout_marginBottom="16dp"/>

                <!-- Semester 6 Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sem6_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hacking"
                    android:textSize="16sp"
                    android:padding="14dp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="@font/product_sans_medium"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_chatbot"
                    app:iconGravity="start"
                    app:iconTint="#FFFFFF"
                    app:backgroundTint="#000000"
                    android:elevation="4dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
