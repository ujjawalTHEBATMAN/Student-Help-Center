<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:animateLayoutChanges="true">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1E1E1E"
            app:strokeColor="#3D3D3D"
            app:strokeWidth="1dp"
            android:alpha="0.95">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dashboard"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome back!"
                        android:textSize="16sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profileButton"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:icon="@drawable/ic_chatbot"
                    app:iconTint="#FFFFFF"
                    app:iconSize="24dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="28dp"
                    app:rippleColor="#80FFFFFF"
                    android:backgroundTint="#2C2C2C"
                    app:strokeColor="#3D3D3D"
                    app:strokeWidth="1dp"
                    android:stateListAnimator="@animator/button_state_animator"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programming"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:gravity="center"
            android:useDefaultMargins="true">

            <!-- Coding Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:strokeColor="#3D3D3D"
                app:strokeWidth="1dp"
                android:stateListAnimator="@animator/button_state_animator_card"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/glow_background">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCoding"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"

                        android:background="@drawable/image_compreser"
                        app:cornerRadius="20dp"
                        app:rippleColor="#80FFFFFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@null"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ImageSize Compresr"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DevTools Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:strokeColor="#3D3D3D"
                app:strokeWidth="1dp"
                android:stateListAnimator="@animator/button_state_animator_card"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/glow_background">


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDevTools"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:background="@drawable/doc_scan"
                        app:cornerRadius="20dp"
                        app:rippleColor="#80FFFFFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@null"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Doc Scanner"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Math Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:strokeColor="#3D3D3D"
                app:strokeWidth="1dp"
                android:stateListAnimator="@animator/button_state_animator_card"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/glow_background">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnMath"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:background="@drawable/math"
                        app:cornerRadius="20dp"
                        app:rippleColor="#80FFFFFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@null"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Math"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- AI Models Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:strokeColor="#3D3D3D"
                app:strokeWidth="1dp"
                android:stateListAnimator="@animator/button_state_animator_card"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/glow_background">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAIModels"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:background="@drawable/messages"
                        app:cornerRadius="20dp"
                        app:rippleColor="#80FFFFFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@null"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:strokeColor="#3D3D3D"
                app:strokeWidth="1dp"
                android:stateListAnimator="@animator/button_state_animator_card"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/glow_background">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/PersonalStorage"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:background="@drawable/cgpa_cal"
                        app:cornerRadius="20dp"
                        app:rippleColor="#80FFFFFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@null"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CGPA Calculator"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp"
                        android:textAlignment="center"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="College Support"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:alignmentMode="alignMargins"
            android:gravity="center"
            android:useDefaultMargins="true">

            <!-- Videos Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:strokeColor="#3D3D3D"
                app:strokeWidth="1dp"
                android:stateListAnimator="@animator/button_state_animator_card"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/glow_background">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVideos"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:scaleY="0.9"
                        android:background="@drawable/video"
                        app:cornerRadius="20dp"
                        app:rippleColor="#80FFFFFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@null"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Videos"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quizzes Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:strokeColor="#3D3D3D"
                app:strokeWidth="1dp"
                android:stateListAnimator="@animator/button_state_animator_card"
                android:clickable="true"
                android:focusable="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/glow_background">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnQuizzes"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:background="@drawable/quiz"
                        app:cornerRadius="20dp"
                        app:rippleColor="#80FFFFFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@null"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quizzes"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Old Papers Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_margin="8dp"
                app:cardBackgroundColor="#2C2C2C"
                app:strokeColor="#3D3D3D"
                app:strokeWidth="1dp"
                android:stateListAnimator="@animator/button_state_animator_card"
                android:clickable="true"
                android:focusable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/glow_background">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnOldPapers"
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:background="@drawable/old_paper"
                        app:cornerRadius="20dp"
                        app:rippleColor="#80FFFFFF"
                        app:strokeWidth="1dp"
                        app:backgroundTint="@null"
                        android:insetLeft="0dp"
                        android:insetTop="0dp"
                        android:insetRight="0dp"
                        android:insetBottom="0dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Old Papers"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:layout_marginTop="12dp"
                        android:fontFamily="sans-serif-medium"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>
    </LinearLayout>
</ScrollView>