<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="elevation"
                android:valueTo="8dp"
                android:duration="100"/>
        </set>
    </item>
    <item>
        <set>
            <objectAnimator
                android:propertyName="elevation"
                android:valueTo="0dp"
                android:duration="100"/>
        </set>
    </item>
</selector>