<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Glow layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:startColor="#404F8EFF"
                android:endColor="#002C2C2C"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <!-- Background layer -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#2C2C2C"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>